                  </DataGrid>
                  <StackPanel>
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,40,0,0" Name="textnipd" VerticalAlignment="Top" Width="120" Text="{Binding Path=NIP_DOKTER}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="textnamd" VerticalAlignment="Top" Width="120" Text="{Binding Path=NAMA_DOKTER}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="textalmtd" VerticalAlignment="Top" Width="120" Text="{Binding Path=ALAMAT_DOKTER}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="textkeld" VerticalAlignment="Top" Width="120" Text="{Binding Path=JENISKELAMIN_DOKTER}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="texttelpd" VerticalAlignment="Top" Width="120" Text="{Binding Path=TELP_DOKTER}" />
                  </StackPanel>
               </StackPanel>
               <Label Content="NIP Dokter" Height="28" HorizontalAlignment="Left" Margin="600,40,0,0" Name="labelnipd" VerticalAlignment="Top" />
               <Label Content="Nama Dokter" Height="28" HorizontalAlignment="Left" Margin="600,80,0,0" Name="labelnamd" VerticalAlignment="Top" />
               <Label Content="Alamat Dokter" Height="28" HorizontalAlignment="Left" Margin="600,122,0,0" Name="labelalad" VerticalAlignment="Top" />
               <Label Content="Kelamin Dokter" Height="28" HorizontalAlignment="Left" Margin="600,164,0,0" Name="labelkeld" VerticalAlignment="Top" />
               <Label Content="Telepon Dokter" Height="28" HorizontalAlignment="Left" Margin="600,209,0,0" Name="labelteld" VerticalAlignment="Top" />
               <Button Content="Simpan" Height="23" HorizontalAlignment="Left" Margin="590,260,0,0" Name="simpanbtnd" VerticalAlignment="Top" Width="75" Click="simpanbtnd_Click" />
               <Button Content="Bersihkan" Height="23" HorizontalAlignment="Left" Margin="680,260,0,0" Name="bersihbtnd" VerticalAlignment="Top" Width="75" Click="bersihbtnd_Click" />
               <Button Content="Batal" Height="23" HorizontalAlignment="Left" Margin="770,260,0,0" Name="batalbtnd" VerticalAlignment="Top" Width="75" Click="batalbtnd_Click" />
               <Button Content="Tambah" Height="23" HorizontalAlignment="Left" Margin="590,320,0,0" Name="tambahbtnd" VerticalAlignment="Top" Width="75" Click="tambahbtnd_Click" />
               <Button Content="Ubah" Height="23" HorizontalAlignment="Left" Margin="680,320,0,0" Name="ubahbtnd" VerticalAlignment="Top" Width="75" Click="ubahbtnd_Click" />
               <Button Content="Hapus" Height="23" HorizontalAlignment="Left" Margin="770,320,0,0" Name="hapusbtnd" VerticalAlignment="Top" Width="75" Click="hapusbtnd_Click" />
               <Button Height="22" HorizontalAlignment="Left" Margin="556,14,0,0" Name="refreshbtnd" VerticalAlignment="Top" Width="22" Click="refreshbtnd_Click" >
                  <Image Source="refresh.png" />
               </Button>
            </Grid>
         </TabItem>
         <TabItem Header="Perawat" Name="tabItemP" Height="30" Width="80">
            <Grid>
               <StackPanel Name="spMainP" Orientation="Horizontal" HorizontalAlignment="Left" Width="864" DataContext="{Binding ElementName=dataGridP, Path=SelectedItem}">
                  <DataGrid AutoGenerateColumns="False" Height="440" Margin="20,20,0,0" Name="dataGridP" Width="560" IsReadOnly="True" SelectionMode="Single" SelectionChanged="dataGridP_SelectionChanged">
