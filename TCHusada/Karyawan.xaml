                  <StackPanel>
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,40,0,0" Name="textnipp" VerticalAlignment="Top" Width="120" Text="{Binding Path=NIP_PERAWAT}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="textnamp" VerticalAlignment="Top" Width="120" Text="{Binding Path=NAMA_PERAWAT}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="textalmtp" VerticalAlignment="Top" Width="120" Text="{Binding Path=ALAMAT_PERAWAT}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="textkelp" VerticalAlignment="Top" Width="120" Text="{Binding Path=JENISKELAMIN_PERAWAT}" />
                     <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="texttelpp" VerticalAlignment="Top" Width="120" Text="{Binding Path=TELP_PERAWAT}" />
                  </StackPanel>
               </StackPanel>
               <Label Content="NIP Perawat" Height="28" HorizontalAlignment="Left" Margin="600,40,0,0" Name="labelnipp" VerticalAlignment="Top" />
               <Label Content="Nama Perawat" Height="28" HorizontalAlignment="Left" Margin="600,80,0,0" Name="labelnamp" VerticalAlignment="Top" />
               <Label Content="Alamat Perawat" Height="28" HorizontalAlignment="Left" Margin="600,122,0,0" Name="labelalap" VerticalAlignment="Top" />
               <Label Content="Kelamin Perawat" Height="28" HorizontalAlignment="Left" Margin="600,164,0,0" Name="labelkelp" VerticalAlignment="Top" />
               <Label Content="Telepon Perawat" Height="28" HorizontalAlignment="Left" Margin="600,209,0,0" Name="labeltelpp" VerticalAlignment="Top" />
               <Button Content="Simpan" Height="23" HorizontalAlignment="Left" Margin="590,260,0,0" Name="simpanbtnp" VerticalAlignment="Top" Width="75" Click="simpanbtnp_Click" />
               <Button Content="Bersihkan" Height="23" HorizontalAlignment="Left" Margin="680,260,0,0" Name="bersihbtnp" VerticalAlignment="Top" Width="75" Click="bersihbtnp_Click" />
               <Button Content="Batal" Height="23" HorizontalAlignment="Left" Margin="770,260,0,0" Name="batalbtnp" VerticalAlignment="Top" Width="75" Click="batalbtnp_Click" />
               <Button Content="Tambah" Height="23" HorizontalAlignment="Left" Margin="590,320,0,0" Name="tambahbtnp" VerticalAlignment="Top" Width="75" Click="tambahbtnp_Click" />
               <Button Content="Ubah" Height="23" HorizontalAlignment="Left" Margin="680,320,0,0" Name="ubahbtnp" VerticalAlignment="Top" Width="75" Click="ubahbtnp_Click" />
               <Button Content="Hapus" Height="23" HorizontalAlignment="Left" Margin="770,320,0,0" Name="hapusbtnp" VerticalAlignment="Top" Width="75" Click="hapusbtnp_Click" />
               <Button Height="22" HorizontalAlignment="Left" Margin="556,14,0,0" Name="refreshbtnp" VerticalAlignment="Top" Width="22" Click="refreshbtnp_Click" >
                  <Image Source="refresh.png" />
               </Button>
            </Grid>
         </TabItem>
         <TabItem Header="Data4" Height="30" Width="80" />
      </TabControl>
         </Grid>
</Window>